{
  "name": "chatgpt-vscode-theme",
  "displayName": "Chatgpt Dark Theme",
  "description": "A dark theme inspired by ChatGPT code blocks, optimized for JSON, PHP, JavaScript, HTML, and CSS.",
  "version": "0.0.2",
  "icon": "images/icon.png",
  "publisher": "andregvg",
  "repository": {
    "type": "git",
    "url": "https://github.com/andregvg/chatgpt-vscode-theme.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "configurationDefaults": {
      "editor.bracketPairColorization.enabled": false,
      "editor.fontFamily": "'Source Code Pro', monospace",
      "editor.fontSize": 14,
      "editor.lineHeight": 22
    },
    "themes": [
      {
        "label": "ChatGPT Dark Theme for Visual Studio Code",
        "uiTheme": "vs-dark",
        "path": "./themes/chatgpt-dark-color-theme.json"
      }
    ]
  }
}